<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivHotelHeader"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/galle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHotelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="-40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/ivHotelHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LuxeVista Galle"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/luxe_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonial Elegance by the Sea"
                    android:textSize="16sp"
                    android:textColor="@color/luxe_green"
                    android:layout_marginTop="4dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:rating="5"
                    android:progressTint="@color/luxe_gold"
                    style="?android:attr/ratingBarStyleSmall" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvCityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Galle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cvHotelTitle" />

        <View
            android:id="@+id/dividerCity"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/luxe_green"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCityTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvCityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galle, a UNESCO World Heritage site on Sri Lanka's southwestern coast, is renowned for its well-preserved colonial fort. Built by the Portuguese and later fortified by the Dutch in the 17th century, Galle Fort represents one of the best examples of a fortified colonial city in Asia. Within its walls, narrow streets are lined with Dutch-colonial buildings, ancient mosques, grand mansions, museums, and boutique shops. The city boasts a unique blend of European architecture and South Asian traditions with a charming atmosphere, while pristine beaches lie just beyond the historic ramparts."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toBottomOf="@id/dividerCity" />


        <TextView
            android:id="@+id/tvHotelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Luxury Hotel"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvCityDescription" />

        <View
            android:id="@+id/dividerHotel"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/luxe_green"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvHotelTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvHotelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LuxeVista Galle occupies a meticulously restored Dutch colonial building within the historic Galle Fort. Our boutique property features 48 luxurious rooms and suites that blend centuries-old architectural elements with contemporary comforts.\n\nGuests can enjoy our seafront infinity pool offering panoramic views of the Indian Ocean, a serene spa specializing in Ayurvedic treatments, and our acclaimed restaurant serving fresh seafood and authentic Sri Lankan cuisine with a modern twist. The hotel's location allows for easy exploration of the fort's cobblestone streets, historic sites, and artisan shops.\n\nOur concierge team specializes in curating experiences that showcase the rich culture and natural beauty of the region, from whale watching expeditions to guided tours of nearby tea plantations. At LuxeVista Galle, we preserve the charm of the past while providing all the luxuries expected by today's discerning travelers."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toBottomOf="@id/dividerHotel" />


        <TextView
            android:id="@+id/tvLeadershipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Leadership"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvHotelDescription" />

        <View
            android:id="@+id/dividerLeadership"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/luxe_green"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLeadershipTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLeadership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/dividerLeadership">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/nimsi"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nethmi Nimsilu"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Manager"
                        android:textSize="14sp"
                        android:textColor="@color/luxe_green" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/luxe_green"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menura"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menura Fernando"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest Experience Director"
                        android:textSize="14sp"
                        android:textColor="@color/luxe_green" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvGalleryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Gallery"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cvLeadership" />

        <View
            android:id="@+id/dividerGallery"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/luxe_green"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvGalleryTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Gallery Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/galleryGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:columnCount="2"
            app:layout_constraintTop_toBottomOf="@id/dividerGallery">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pool2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buffet2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lobby2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gall1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gall2" />
            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:tint="@color/luxe_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/galleryGrid"
            app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>