<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageViewRoom"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/deulux" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/textViewRoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Ocean Suite"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/textViewRoomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panoramic Sea View â€¢ King Bed"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/textViewQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty: 2"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:fontFamily="sans-serif-medium" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LKR 45,000"
                    android:textColor="@color/luxe_green"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#FFEBEE"
            app:cardElevation="0dp"
            android:layout_gravity="top">

            <ImageButton
                android:id="@+id/buttonRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:tint="#D32F2F" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>