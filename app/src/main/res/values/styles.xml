<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EnhancedTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="HeaderTitleStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="SectionTitleStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="MaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#1A000000</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>


    <style name="LuxeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="LuxeFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/fab_gradient</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>


    <style name="LuxeTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/luxe_green</item>
        <item name="tabIndicatorColor">@color/luxe_green</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabTextAppearance">@style/EnhancedTabTextAppearance</item>
        <item name="tabPaddingTop">12dp</item>
        <item name="tabPaddingBottom">12dp</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="LocationCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#15000000</item>
        <item name="cardBackgroundColor">@drawable/location_card_bg</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:elevation">2dp</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

</resources>